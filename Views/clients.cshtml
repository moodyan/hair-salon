@{
  Layout="Shared/_Layout.cshtml";
}

<h3>Clients</h3>
<dl>
  @if (Model.Count !=0)
  {
    @foreach(var clients in Model)
    {
      <dd><a href="/clients/@clients.GetId()">@clients.GetClientName()</a></dd>
    }
  }
  else
  {
    <p>This salon currently has no clients.</p>
  }
</dl>

<h4><a href ="/clients/new">ADD A NEW CLIENT</a></h4>
<h4><a href="/">RETURN HOME</a></h4>
